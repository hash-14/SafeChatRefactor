<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <solid android:color="#f472d0"/>
        <corners android:radius="12dp" />

        <gradient android:angle="270" android:endColor="#ffa2ff" android:startColor="#f472d0" />
        <stroke android:width="1dp" android:color="#BABABA" />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

    </shape>
</item>
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#d80073"/>
        <corners android:radius="12dp" />

        <gradient android:angle="270" android:endColor="#d80073" android:startColor="#d80073" />
        <stroke android:width="1dp" android:color="#BABABA" />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
    </shape>
</item>





</selector>
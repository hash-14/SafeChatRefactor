<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#5bd1f2"/>
            <corners android:radius="5dp" />

            <gradient android:angle="270" android:endColor="#8bf5ff" android:startColor="#5bd1f2" />
            <stroke android:width="1dp" android:color="#BABABA" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0050ef"/>
            <corners android:radius="5dp" />

            <gradient android:angle="270" android:endColor="#0050ef" android:startColor="#0050ef" />
            <stroke android:width="1dp" android:color="#BABABA" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
        </shape>
    </item>





</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#dddddd"/>
            <corners android:radius="12dp" />

            <gradient android:angle="270" android:endColor="#dddddd" android:startColor="#F5B041" />
            <stroke android:width="1dp" android:color="#888888" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0050ef"/>
            <corners android:radius="12dp" />

            <gradient android:angle="270" android:endColor="#0050ef" android:startColor="#0050ef" />
            <stroke android:width="1dp" android:color="#BABABA" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
        </shape>
    </item>





</selector>
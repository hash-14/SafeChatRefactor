<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="false">
            <shape android:shape="rectangle">
                <solid android:color="#f1f1f1"/>
                <corners android:radius="5dp" />

                <gradient android:angle="270" android:endColor="#fafafa" android:startColor="#f1f1f1" />
                <stroke android:width="1dp" android:color="#EFEFEF" />
                <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            </shape>
        </item>
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#008a00"/>
                <corners android:radius="5dp" />

                <gradient android:angle="270" android:endColor="#008a00" android:startColor="#008a00" />
                <stroke android:width="1dp" android:color="#BABABA" />
                <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            </shape>
        </item>





</selector>
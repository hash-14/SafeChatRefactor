<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <solid android:color="#e51400"/>
        <corners android:radius="12dp" />

        <gradient android:angle="270" android:endColor="#ff5440" android:startColor="#e51400" />
        <stroke android:width="1dp" android:color="#BABABA" />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

    </shape>
</item>
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#a20025"/>
        <corners android:radius="12dp" />

        <gradient android:angle="270" android:endColor="#a20025" android:startColor="#a20025" />
        <stroke android:width="1dp" android:color="#BABABA" />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
    </shape>
</item>





</selector>
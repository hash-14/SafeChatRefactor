<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <solid android:color="#aa00ff"/>
        <corners android:radius="12dp" />

        <gradient android:angle="270" android:endColor="#ea40ff" android:startColor="#aa00ff" />
        <stroke android:width="1dp" android:color="#BABABA" />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

    </shape>
</item>
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#6a00ff"/>
        <corners android:radius="12dp" />

        <gradient android:angle="270" android:endColor="#6a00ff" android:startColor="#6a00ff" />
        <stroke android:width="1dp" android:color="#BABABA" />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
    </shape>
</item>





</selector>
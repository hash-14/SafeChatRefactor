<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <solid android:color="#1ba1e2"/>
        <corners android:radius="12dp" />

        <gradient android:angle="270" android:endColor="#5bd1ff" android:startColor="#1ba1e2" />
        <stroke android:width="1dp" android:color="#BABABA" />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

    </shape>
</item>
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#0050ef"/>
        <corners android:radius="12dp" />

        <gradient android:angle="270" android:endColor="#0050ef" android:startColor="#0050ef" />
        <stroke android:width="1dp" android:color="#BABABA" />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
    </shape>
</item>





</selector>